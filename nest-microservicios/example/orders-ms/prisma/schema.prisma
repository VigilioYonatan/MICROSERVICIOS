generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  DELIVERED
  CANCELLED
}

model Order {
  id String @id @default(uuid())
  total_amount Float
  total_items Int

  status OrderStatus
  paid Boolean @default(false)
  paid_at DateTime?

  created_at DateTime @default(now())
  update_at DateTime @updatedAt
}